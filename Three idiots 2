#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    int x1,y1,x2,y2;
    scanf("%d\n%d\n%d\n%d\n",&x1,&y1,&x2,&y2);
    float x_avg=(x1+x2)/2.0;
    float y_avg=(y1+y2)/2.0;
    printf("Binoy's house is located at (%.1f,%.1f)",x_avg,y_avg);
    return 0;
}
