#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
    {

          double a1,a2;
         char p;
      scanf("%lf\n",&a1);
       scanf("%lf\n",&a2);
        scanf("%c\n",&p);
       switch(p)
          {
            case '+':
             {
                  printf("Addition of two number is %.1lf",a1+a2);
                 break;
             }
          case '-':
             {
                 printf("Subtraction of two number is %.1lf",a1-a2);
                 break;
             }
          case '*':
            {
                printf("Multiplication of two number is %.1lf",a1*a2);
                break;
            }
          case '/':
              {
                  printf("Division of two number is %.1lf",a1/a2);
                  break;
                  }
          default:
                {
                    printf("Invalid Input");
                }
          }
    return 0;
    }
                    
